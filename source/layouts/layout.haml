!!!
%html
  %head
    %meta{ :charset => 'utf-8' }
    %meta{ :content => 'IE=edge,chrome=1', :'http-equiv' => 'X-UA-Compatible' }
    %meta{ :content => 'width=device-width,initial-scale=1', 'name' => 'viewport' }
    %title
      = current_page.data.title || 'Dayview Poster'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Playfair+Display:400,900|PT+Sans:400,700|Merriweather:400,900|Oswald:400,700,300'
    = stylesheet_link_tag 'http://api.tiles.mapbox.com/mapbox.js/v1.6.1/mapbox.css'
    %link{ 'href' => 'stylesheets/application.css', 'media' => 'screen', 'rel' => 'stylesheet', 'type' => 'text/css' }
  %body
    = yield
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js'
    = javascript_include_tag 'http://api.tiles.mapbox.com/mapbox.js/v1.6.1/mapbox.js'
    %script{ 'src' => 'javascripts/application.js', 'type' => 'text/javascript' }
